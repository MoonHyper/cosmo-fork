use "assert"
use "math"

int fn gcd(int x, int y) {
  until y == 0 {
    const int r = x % y
    x = y
    y = r
  }
  x
}

int fn lcm(const int x, const int y) {
  const float z = (x * y) / gcd(x, y)
  Math->floor(z)
}

Assert->eq(lcm(9, 18), 18) ## 18
Assert->eq(lcm(8, 5), 40) ## 40
Assert->eq(lcm(17, 11), 187) ## 187