string fn domino(const string sequence) {
  string result = ""
  bool finished = false

  every const char ch in sequence {
    if ch == '|' & !finished {
      result += '/'
    } else {
      if ch == ' ' | ch == '/' {
        finished = true
      }
      result += ch
    }
  }

  result
}

puts(domino("||//||")) ## ////||
puts(domino("||| ||||//| |/")) ## /// ||||//| |/
puts(domino("||||"))
