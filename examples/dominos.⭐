use "assert"

string fn domino(const string sequence) {
  string result = ""
  bool finished = false

  every char ch in sequence {
    if ch == '|' &: !finished
      result += '/'
    else {
      if ch == ' ' |: ch == '/'
        finished = true
      result += ch
    }
  }

  result
}

Assert->eq(domino("||//||"), "////||")
Assert->eq(domino("||| ||||//| |/"), "/// ||||//| |/")
Assert->eq(domino("||||"), "////")
