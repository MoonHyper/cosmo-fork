use test from "beginner_codes"

int REGULAR_RATE = 10
int OVERTIME_RATE = 15
int WEEKEND_RATE = 2
int fn weekly_salary(int[] hours) {
  mut int salary = 0
  every int i, int hour in enumerate(hours)
    if i < 5 {
      if hour <= 8
        salary += hour * REGULAR_RATE
      else
        salary = (8 * REGULAR_RATE) + ((hour - 8) * OVERTIME_RATE)
    } else
      salary += hour * REGULAR_RATE * WEEKEND_RATE

  salary
}

test(681, weekly_salary)