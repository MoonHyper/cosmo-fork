use "bc_challenges"

string fn extract_mentions(string tweet) {
  mut string[] mentions = []
  every string word in tweet->split
    if word.starts_with?('@') or word.starts_with?('#') {
      string cleaned = word.split(',').first()
        .split('.').first()
        .split('?').first()
        .split('!').first()

      mentions << cleaned
    }

  mentions->join(" ")
}

test(678, extract_mentions)