use "assert"

string[] letters = ["a", "b", "c"]
puts(letters[0], letters[1], letters[2]) ## a b c

letters << "d"
Assert->eq(letters[3], "d")

int[] nums = [1,2,3,4,5,6]

int fn double(int n) { n * 2 }
int[] doubled = nums->map(double)
Assert->eq(doubled, [2,4,6,8,10,12])

bool fn even?(int n) { n % 2 == 0 }
int[] evens = nums->filter(even?)
Assert->eq(evens, [2,4,6])
Assert->eq(evens->first(), 2)
Assert->eq(doubled->last(), 12)